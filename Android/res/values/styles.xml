<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.PlayAds" parent="@android:style/Theme.Translucent">
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Global Styles -->
    <style name="_AL_DarkShadedTextStyle">
        <item name="android:shadowColor">@color/al_shadow_dark</item>
        <item name="android:shadowDx">-0.5</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <style name="_AL_ShadedTextStyle">
        <item name="android:shadowColor">@color/al_shadow_normal</item>
        <item name="android:shadowDx">-0.5</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <!--  -->

    <style name="AL_CurrentPriceStyle">
        <item name="android:textColor">@color/al_orange</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!-- Daily Styles -->

    <style name="AL_DailyCurrentPrice" parent="@style/_AL_DarkShadedTextStyle">
        <item name="android:textColor">@color/al_orange</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AL_DailyTileText" parent="@style/_AL_DarkShadedTextStyle">
        <item name="android:textColor">@color/al_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Categories Styles -->

    <style name="AL_TagTextStyle">
        <item name="android:textColor">@color/al_white</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/al_shape_tag</item>
    </style>

    <style name="AL_DownloadButtonStyle" parent="@style/_AL_ShadedTextStyle">
        <item name="android:textColor">@color/al_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">34dp</item>
        <item name="android:minHeight">45dp</item>
        <item name="android:background">@color/al_btn_green</item>
        <item name="android:drawableLeft">@drawable/al_play_store_icon_small</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AL_DailyInfoBox">
        <item name="android:textColor">@color/al_white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/al_dark_grey_box</item>
    </style>

</resources>